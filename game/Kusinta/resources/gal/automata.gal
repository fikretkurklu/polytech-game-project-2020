FlyingOpponents (East) {
*(East)
  | Cell(H, P) ? Power : (East)  
  | ! GotPower() ? Explode() : ()        
  | Cell(E, O) ? Turn(W) : (West)
  | Closest(P, E) ? Egg(E) : (East)
  | Closest(P, W) ? Egg(W) : (East)
  | !Cell(E, O) ? Move(E) : (East) 
 *(West)
  | Cell(H, P) ? Power : (West)  
  | ! GotPower() ? Explode() : ()        
  | Cell(W, O) ? Turn(E) : (East)
  | Closest(P, E) ? Egg(E) : (West)
  | Closest(P, W) ? Egg(W) : (West)
  | !Cell(W, O)? Move(W) : (West) 
}


WalkingOpponents (East) {
*(East)

  | Cell(H, P) ? Power : (East)
  | ! GotPower() ? Explode() : ()
  | Cell(E, P) ? Wizz() : (East)
  | Cell(E, O) ? Turn(W) : (West)
  | Closest(P, E) ? Pop(E) : (East)
  | True ? Move(E) : (East)
*(West)

  | Cell(H, P) ? Power : (West)
  | ! GotPower() ? Explode() : ()
  | Cell(W, P) ? Wizz() : (West)
  | Cell(W, O) ? Turn(E) : (East)
  | Closest(P, W) ? Pop(W) : (West)
  | True ? Move(W) : (West)
}

KeyDrop (Init) {
*(Init)
  | Cell(H, A) ? Wizz : ()
  | True ? : (Init)
}

CoinDrop (Init) {
*(Init)
  | Cell(H, A) ? Wizz : ()
  | True ? : (Init)
}

Boss (EW) {
*(NS)
  | MyDir(N) & Cell(N, O) ? Turn(E) / Turn(W) : (EW)
  | MyDir(S) & Cell(S, O) ? Turn(E) / Turn(W) : (EW)
  | Cell(H, P) ? Power : (NS)  
  | ! GotPower() ? Explode() : ()   
  | Closest(P, E) ? Hit(E) : (NS)
  | Closest(P, W) ? Hit(W) : (NS)
  | True ? Move() : (NS) 
 *(EW)
  | MyDir(E) & Cell(E, O) ? Turn(N) / Turn(S) : (NS)
  | MyDir(W) & Cell(W, O) ? Turn(N) / Turn(S) : (NS)
  | Cell(H, P) ? Power : (EW)  
  | ! GotPower() ? Explode() : ()   
  | Closest(P, E) ? Hit(E) : (EW)
  | Closest(P, W) ? Hit(W) : (EW)
  | True ? Move() : (EW) 
}

